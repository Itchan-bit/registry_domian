<p id="notice"><%= notice %></p>

<h1>Registrants</h1>

<table>
  <thead>
    <tr>
      <th>Voice</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Address</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrants.each do |registrant| %>
      <tr>
        <td><%= registrant.voice %></td>
        <td><%= registrant.fax %></td>
        <td><%= registrant.email %></td>
        <% registrant.addresses.each do |address_attr|%>
        <td><%= address_attr.street %> <%= address_attr.city %> <%= address_attr.state %></td>
        <%end%>
        <td><%= link_to 'Show', registrant %></>
        <td><%= link_to 'Edit', edit_registrant_path(registrant) %></td>
        <td><%= link_to 'Destroy', registrant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registrant', new_registrant_path %>
